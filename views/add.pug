extends layout.pug 

block content 
    .pagecontent 
        h1.addpage Add Medicine 
        if error 
            p.error Please, fill out the form before saving
        if success
            p.success Successfully added to the database
        
        form.form(action='/add', method='POST')
            label Title 
            input.input(type="text" name="title")

            label Details
            textarea.input(name="details") 

            button.btn Add Medicine

